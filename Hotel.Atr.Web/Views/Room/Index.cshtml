}
<!-- Breadcrumb Area Start-->
<section class="breadcrumb-area overlay-dark-2 bg-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text text-center">
                    <h2>room - List view</h2>
                    <p>A quality room of hotel ATR with sea or mountain view</p>
                    <div class="breadcrumb-bar">
                        <ul class="breadcrumb">
                            <li><a href="#">Home</a></li>
                            <li>Room - list view</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Area End -->
<!-- Room Area Start -->
<section class="room-area pt-90">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="section-title text-center">
                    <h3>our atr rooms</h3>
                    <p>Здесь будет подробное описание комнат</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @if (Model != null)
                {
                    foreach (Room room in Model)
                    {
                        <div class="room-list">
                            <div class="row">
                                <div class="col-md-5 col-sm-6">
                                    <a href="@Url.Action("RoomDetails", "Room", new {roomId = room.RoomId})">
                                        <img src="@room.RoomType.Imagepath" height="303" width="420" alt="">
                                    </a>
                                </div>
                                <div class="col-md-7 col-sm-6">
                                    <div class="room-list-text">
                                        <h3>
                                            <a href="@Url.Action("RoomDetails", "Room", new {roomId = room.RoomId})">Номер комнаты - @room.RoomId</a>
                                        </h3>
                                        <p>Тип - @room.RoomType.Name</p>
                                        <p>@room.RoomType.RoomTypeDescription</p>
                                        <h4>Оснащение номеров</h4>
                                        <div class="room-service">
                                            <div class="room-facilities">
                                                @foreach (string item in room.GetType().GetProperties()
                                                    .Where(s => s.PropertyType == typeof(bool) && (bool)s.GetValue(room))
                                                    .Select(s => s.Name).ToList())
                                                {
                                                    <span>
                                                        <i class="zmdi zmdi-check"></i>
                                                        @item
                                                    </span>

                                                }

                                            </div>
                                            <div class="p-amount">
                                                <span>@room.RoomType.Price</span>
                                                <span class="count">Per Night</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
