                </div>
            </div>
            <div class="room-area">
                <div class="container-fluid">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <h3 class="room-details-title">similar rooms</h3>
                            </div>
                        </div>
                    </div>
                    @foreach (Room room in Model.RoomType.Rooms.Where(w => w.RoomId != Model.RoomId))
                    {
                        <div class="single-room small">
                            <img src="@room.RoomType.Imagepath" alt="">
                            <h3>@room.RoomType.Name</h3>
                            <div class="room-hover">
                                <div class="hover-text text-center">
                                    <h3><a href="@Url.Action("RoomDetails","Room",new{roomId=room.RoomId})">@room.RoomType.Name</a></h3>
                                    <p>Max persons : @room.MaxPersons &nbsp; Floor : @room.Floor</p>
                                </div>
                                <div class="p-amount">
                                    <span>@room.RoomType.Price</span>
                                    <span class="count">Per Night</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    }<!-- Room Details Area End -->
