<body>
    <section class="breadcrumb-area overlay-dark-2 bg-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumb-text text-center">
                        <h2>Room Details</h2>
                        <p>A quality room of hotel ATR with sea or mountain view</p>
                        <div class="breadcrumb-bar">
                            <ul class="breadcrumb">
                                <li><a href="index.html">Home</a></li>
                                <li>Room Details</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Room Details Area Start -->
    @if (Model != null)
    {
        <section class="room-details pt-90">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9 col-md-8">
                        <div class="room-slider-wrapper">
                            <div class="room-slider">
                                <div class="slider-image">
                                    <img src="@Model.RoomType.Imagepath" alt="">
                                    <div class="cost">
                                        <h2>$ @Model.RoomType.Price</h2>
                                        <span>Per Night</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="room-details-text">
                            <h3 class="room-details-title">description of room</h3>
                            <p>Num of room - @Model.RoomId</p>
                            <p>Type of room - @Model.RoomType.Name</p>
                            <p>Floor - @Model.Floor</p>
                            <p>Max persons - @Model.MaxPersons</p>
                            <p>Square - @Model.Square</p>
                        </div>
                        <div class="room-facilities">
                            <h3 class="room-details-title">room facilities</h3>
                            @{ List<string> roomFacilities = Model.GetType().GetProperties()
                                          .Where(s => s.PropertyType == typeof(bool) && (bool)s.GetValue(Model))
                                          .Select(s => s.Name).ToList();
                                List<string> nonAvailableRoomFacilites = Model.GetType().GetProperties()
                                    .Where(s => s.PropertyType == typeof(bool) && !(bool)s.GetValue(Model))
                                    .Select(s => s.Name).ToList();
                            }
                            <div class="single-facility">
                                @foreach (string roomFacility in roomFacilities)
                                {
                                    <span>
                                        <i class="zmdi zmdi-check"></i>
                                        @roomFacility
                                    </span>
                                }
                            </div>
                            <div class="single-facility">
                                @foreach (string roomFacility in nonAvailableRoomFacilites)
                                {
                                    <span>
                                        <i class="zmdi zmdi-close"></i>
                                        @roomFacility
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
