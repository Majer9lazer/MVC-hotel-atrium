@model HotelAtr.DAL.Model.RoomType

@{
    ViewBag.Title = "Создание";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Create", "RoomTypes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Типа комнаты</h4>
        <hr />
        <div class="form-group">
            @Html.ValidationSummary(false, "Заполните все поля", new { @class = "text-danger col-md-4" })
            @Html.LabelFor(model => model.Name, "Наименование типа комнаты", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Name, "Поле обязательно для заполнения", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RoomTypeDescription, "Описание", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RoomTypeDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoomTypeDescription, "Поле обязательно для заполнения", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, "Цена", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "Поле обязательно для заполнения", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Imagepath, "Выберите картинку для отображения", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("file", "Ничего", htmlAttributes: new { @class = "form-control", type = "file" })
                @Html.ValidationMessageFor(model => model.Imagepath, "Поле обязательно для заполнения", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="container-fluid">
    @Html.ActionLink("Вернуться к списку", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
